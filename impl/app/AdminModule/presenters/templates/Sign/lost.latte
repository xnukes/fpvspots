{block content}

{form signLostForm, class => 'sky-form boxed'}

    <header><i class="fa fa-users"></i> Ztracené heslo</header>

    {snippet flashes}
        <div n:foreach="$flashes as $flash" class="{$flash->type} alert alert-{$flash->type} noborder text-center weight-400 nomargin noradius">{$flash->message|noescape}</div>
    {/snippet}
    {if $form->hasErrors()}
        <div n:foreach="$form->errors as $error" class="alert alert-danger noborder text-center weight-400 nomargin noradius">{$error|noescape}</div>
    {/if}

    <fieldset>
        <section>
            {label username, class => 'label' /}
            <label class="input">
                <i class="icon-append fa fa-user"></i>
                {input username}
                <span class="tooltip tooltip-top-right">Zadejte vaše uživatelské jméno</span>
            </label>
        </section>
        <section>
            {label email, class => 'label' /}
            <label class="input">
                <i class="icon-append fa fa-envelope"></i>
                {input email}
                <span class="tooltip tooltip-top-right">Zadejte vaš platný e-mail</span>
            </label>
        </section>
    </fieldset>
    <footer>
        <div class="row">
            <div class="col-md-6 text-left"><a n:href="Sign:in" class="btn btn-sm btn-primary pull-left"><i class="fa fa-user-o"></i> Přihlásit se</a></div>
            <div class="col-md-6 text-right"><button n:name="send" class="btn btn-sm btn-warning pull-right"><i class="fa fa-paper-plane-o"></i> Zaslat heslo</button></div>
        </div>
        <div class="text-center login-footer">
            {$systemVersion|noescape}
        </div>
    </footer>
{/form}
